.search-box {
  width: 750rpx;
  height: 120rpx;
  background-color: #1E90FF;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-box {
  width: 520rpx;
  height: 80rpx;
  border-radius: 40rpx 0 0 40rpx;
  background-color: #fff;
}

.input {
  padding: 0 32rpx 0 52rpx;
  height: 80rpx;

  font-size: 34rpx;
  line-height: 80rpx;
  color: #333;
}

.btn {
  font-size: 34rpx;
  line-height: 76rpx;
  color: #fff;
  text-align: center;

  width: 160rpx;
  height: 76rpx;
  border-radius: 0 40rpx 40rpx 0;
  border: 1rpx solid #fff;
}