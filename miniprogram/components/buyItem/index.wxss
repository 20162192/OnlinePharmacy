.item-box {
  height: 220rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx 4rpx rgba(167, 184, 214, 0.15);
  padding: 32rpx;
  margin-bottom: 20rpx;

  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.info {
  flex: 1;
  padding: 0 16rpx;
}

.name {
  font-size: 34rpx;
  line-height: 40rpx;
  color: #333;
  padding: 10rpx 10rpx 0 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.des {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #666;
  padding: 10rpx 10rpx 0 10rpx;
}

.price {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #FF4A3B;
  padding: 10rpx 10rpx 40rpx 10rpx;
}