.goods-img {
  width: 750rpx;
  height: 520rpx;
}

.des {
  font-size: 34rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #666;
  padding: 30rpx 10rpx 0;
}

.name {
  font-size: 34rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #333;
  padding: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: #FF4A3B;
  padding: 20rpx 10rpx;
}

.line {
  width: 750rpx;
  height: 12rpx;
  background-color: rgb(250, 250, 250);
}

.tip {
  padding: 10rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #7F1911;
}

.btn-box {
  width: 750rpx;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.call-btn {
  width: 40%;
  height: 118rpx;
  border-top: 2rpx solid #1F75F4;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 40rpx;
  text-align: center;
  line-height: 118rpx;
  color: #1F75F4;
}

.buy-btn {
  width: 60%;
  height: 120rpx;
  background-color: #1F75F4;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 40rpx;
  text-align: center;
  line-height: 120rpx;
  color: #FFF;
}